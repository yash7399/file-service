/* ===== Global Reset ===== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

body {
  background: #f4f6f9;
}

/* ===== Main Container ===== */
.form-container {
  max-width: 1100px;
  margin: 40px auto;
  background: #ffffff;
  padding: 40px;
  border-radius: 14px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

/* ===== Header ===== */
.form-header {
  text-align: center;
  margin-bottom: 30px;
}

.form-header-img {
  width: 220px;
  margin-bottom: 15px;
}

.form-title {
  font-size: 22px;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5px;
}

/* ===== Sections ===== */
.form-section {
  margin-bottom: 40px;
  padding-bottom: 25px;
  border-bottom: 1px solid #e5e7eb;
}

.form-section h3 {
  margin-bottom: 20px;
  font-size: 18px;
  font-weight: 600;
  color: #1f2937;
}

/* ===== Grid Layout ===== */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

/* ===== Labels ===== */
label {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: #374151;
}

.section-part-heading {
  font-weight: 500;
  margin-bottom: 6px;
}

.star {
  color: #e11d48;
}

/* ===== Inputs & Select ===== */
input,
select {
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid #d1d5db;
  font-size: 14px;
  transition: all 0.2s ease;
  background-color: #fff;
}

input:focus,
select:focus {
  outline: none;
  border-color: #2563eb;
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
}

/* ===== Address Sections ===== */
.address-section {
  margin-top: 25px;
  padding: 20px;
  background: #f9fafb;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
}

.address-heading,
.billing-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.address-line-fullwidth {
  grid-column: 1 / -1;
}

.address-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
}

/* ===== Checkbox Styling ===== */
.checkbox-group {
  grid-column: 1 / -1;
}

.checkbox-container {
  display: flex;
  gap: 20px;
  margin-top: 10px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 14px;
}

input[type="checkbox"] {
  accent-color: #2563eb;
  width: 16px;
  height: 16px;
}

/* ===== Segment Dynamic Fields ===== */
.segment-fields {
  margin-top: 20px;
  padding: 20px;
  border-radius: 10px;
  background: #f3f4f6;
  border: 1px solid #e5e7eb;
}

.segment-fields h5 {
  margin-bottom: 15px;
  font-weight: 600;
  color: #111827;
}

/* ===== Captcha ===== */
.captcha-section {
  margin-top: 25px;
}

.captcha-box {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-top: 8px;
}

.captcha-code {
  padding: 10px 16px;
  background: #111827;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 2px;
  border-radius: 6px;
  user-select: none;
}

.reload-btn {
  padding: 8px 14px;
  border: none;
  background: #2563eb;
  color: #ffffff;
  border-radius: 6px;
  cursor: pointer;
  font-size: 13px;
  transition: background 0.2s ease;
}

.reload-btn:hover {
  background: #1d4ed8;
}

/* ===== Buttons ===== */
.form-buttons {
  margin-top: 30px;
  display: flex;
  justify-content: flex-end;
  gap: 15px;
}

.submit-btn {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  background: #16a34a;
  color: #ffffff;
  font-weight: 500;
  cursor: pointer;
  transition: 0.2s ease;
}

.submit-btn:hover {
  background: #15803d;
}

.cancel-btn {
  padding: 10px 20px;
  border-radius: 8px;
  border: 1px solid #d1d5db;
  background: #ffffff;
  cursor: pointer;
  transition: 0.2s ease;
}

.cancel-btn:hover {
  background: #f3f4f6;
}

/* ===== Note ===== */
.note {
  margin-top: 20px;
  font-size: 13px;
  color: #6b7280;
}

/* ===== Responsive ===== */
@media (max-width: 768px) {
  .form-container {
    padding: 20px;
  }

  .form-buttons {
    flex-direction: column;
    align-items: stretch;
  }

  .submit-btn,
  .cancel-btn {
    width: 100%;
  }
}